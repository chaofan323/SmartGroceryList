<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/summaryRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="@string/summary_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Estimated -->
    <TextView
        android:id="@+id/tvEstimatedLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/summary_estimated_label"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvEstimatedValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvEstimatedLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Spent -->
    <TextView
        android:id="@+id/tvSpentLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/summary_spent_label"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvEstimatedValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSpentValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvSpentLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Remaining -->
    <TextView
        android:id="@+id/tvRemainingLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/summary_remaining_label"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSpentValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvRemainingValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvRemainingLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Progress label -->
    <TextView
        android:id="@+id/tvProgressLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/summary_progress_label"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvRemainingValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/pbSpendingProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvProgressLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Progress text -->
    <TextView
        android:id="@+id/tvProgressValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0%"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/pbSpendingProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
